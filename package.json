{
  "name": "laravel-websockets-js",
  "version": "1.0.1",
  "description": "Echo friendly websocket solution for Laravel applications",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts \"src/**/*.js",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exzachlyvv/laravel-websockets-js.git"
  },
  "keywords": [
    "echo",
    "websocket",
    "pusher",
    "broadcast",
    "laravel"
  ],
  "author": "Zach Vander Velden",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/exzachlyvv/laravel-websockets-js/issues"
  },
  "homepage": "https://github.com/exzachlyvv/laravel-websockets-js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "jest": "^26.0.1",
    "laravel-echo": "^1.8.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0"
  }
}
